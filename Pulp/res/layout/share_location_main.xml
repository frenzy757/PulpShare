<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    tools:context=".ShareOptionListFragment" >
   
      <fragment
          android:id="@+id/map_view"
          android:name="com.google.android.gms.maps.SupportMapFragment"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="0.93" />
      
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_gravity="bottom"
       android:layout_height="wrap_content"
       android:layout_weight=".07"
       android:orientation="horizontal" >

           <Button
               android:id="@+id/track_location_button"
               android:layout_height="match_parent"
               android:layout_width="wrap_content"
               android:layout_weight="50"
               android:layout_marginBottom="0dp"
               android:text="Track Over Time" />

           <Button
               android:id="@+id/share_location_button"
               android:layout_height="match_parent"
               android:layout_width="wrap_content"
               android:layout_weight="70"
               android:layout_marginBottom="0dp"
               android:text="Share Once" />

           <Button
               android:id="@+id/end_location_share_button"
               
               android:layout_height="match_parent"
               android:layout_width="wrap_content"
               android:layout_weight="100"
               android:layout_marginBottom="0dp"
               android:text="End Location Sharing" />

           <Button
               android:id="@+id/center_map_button"              
               android:layout_height="match_parent"
               android:layout_width="wrap_content"
               android:layout_weight="30"
               android:layout_marginBottom="0dp"
               android:text="Center Map" />
  

   </LinearLayout>
    
  

</LinearLayout>
